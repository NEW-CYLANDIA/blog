---
layout: layouts/base.njk
---
<h2>{{ member.name }}</h2>

<p>
    Website: <a href="{{member.website}}" target="_new">{{member.website}}</a><br />
    Twitter: <a href="https://twitter.com/{{member.twitter}}" target="_new">@{{member.twitter}}</a>
</p>

<img src="{{member.photo}}" style="float:left; max-height: 300px; padding-right: 10px">
<p>
    {{member.bio}}
</p>

<br clear="left" />

<h2>Post History</h2>
{% set posts = (collections.posts | getPostsByMember(member.key)) %}
<ul>
    {% for post in posts %}
    <li><a href="{{post.url}}">{{post.data.title}}</a></li>
    {% endfor %}
</ul>